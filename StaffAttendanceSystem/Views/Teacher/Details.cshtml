@model StaffAttendanceSystem.Models.AttendanceViewModel
@{
    ViewBag.Title = "Teacher Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Add any additional CSS files or styles here -->
    <style>
        /* Custom CSS for improved styling */
        .sidebar {
            background-color: #f8f9fa;
            padding: 15px;
        }

        .profile-picture {
            max-width: 200px;
            height: auto;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3">
                <div class="list-group">
                    <a href="@Url.Action("Index", "Teacher")" class="list-group-item list-group-item-action">
                        Back to Teacher List
                    </a>
                    <a href="#" class="list-group-item list-group-item-action active">
                        Teacher Details
                    </a>
                </div>
            </nav>

            <!-- Main content -->
            <div class="col-md-9">
                <h2 class="mt-4">Teacher Details</h2>

                <table class="table table-bordered mt-3">
                    <tr>
                        <th class="w-25">ID:</th>
                        <td>@Model.Teacher.Id</td>
                    </tr>
                    <tr>
                        <th>Full Name:</th>
                        <td>@Model.Teacher.FullName</td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>@Model.Teacher.Email</td>
                    </tr>
                    <tr>
                        <th>Phone Number:</th>
                        <td>@Model.Teacher.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th>Department:</th>
                        <td>@Model.Teacher.Department</td>
                    </tr>
                    <tr>
                        <th>Profile Picture:</th>
                        <td>
                            @if (!string.IsNullOrEmpty(Model.Teacher.ProfilePictureUrl))
                            {
                                <img src="@Model.Teacher.ProfilePictureUrl" alt="Profile Picture" class="img-fluid profile-picture" />
                            }
                            else
                            {
                                <p>No profile picture available.</p>
                            }
                        </td>
                    </tr>
                    <!-- Monthly and Yearly Attendance Percentages -->
                    <tr>
                        <th>Monthly Attendance:</th>
                        <td>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: @Model.CurrentMonth%;" aria-valuenow="@Model.CurrentMonth" aria-valuemin="0" aria-valuemax="100">
                                    @Model.CurrentMonth.ToString("0.00")%
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>Yearly Attendance:</th>
                        <td>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: @Model.CurrentYear%;" aria-valuenow="@Model.CurrentYear" aria-valuemin="0" aria-valuemax="100">
                                    @Model.CurrentYear.ToString("0.00")%
                                </div>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

</body>
</html>
