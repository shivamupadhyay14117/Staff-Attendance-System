@model StaffAttendanceSystem.Models.Attendance

@{
    ViewData["Title"] = "Edit Attendance";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Attendance</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-timepicker/0.5.2/css/bootstrap-timepicker.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-timepicker/0.5.2/js/bootstrap-timepicker.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Edit Attendance</h2>
        <form asp-controller="TeacherAttendance" asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="AttendanceId" />

            <div class="form-group">
                <label asp-for="TeacherId" class="control-label"></label>
                <input asp-for="TeacherId" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <div class="input-group date">
                    <input asp-for="Date" class="form-control datepicker" autocomplete="off" />
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="fas fa-calendar-alt"></i>
                        </span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="InTime" class="control-label"></label>
                <div class="input-group timepicker">
                    <input asp-for="InTime" class="form-control" autocomplete="off" />
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="fas fa-clock"></i>
                        </span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="OutTime" class="control-label"></label>
                <div class="input-group timepicker">
                    <input asp-for="OutTime" class="form-control" autocomplete="off" />
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="fas fa-clock"></i>
                        </span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <script>
        $(document).ready(function () {
            $('.datepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true,
                todayHighlight: true
            });

            $('.timepicker').timepicker({
                showMeridian: false,
                showSeconds: true,
                defaultTime: false
            });
        });
    </script>
</body>
</html>
